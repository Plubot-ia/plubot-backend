# Backend Environment Variables - PRODUCTION

# Flask
SECRET_KEY=your_production_secret_key_here

# Frontend URL
FRONTEND_URL=https://www.plubot.com

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/database

# Redis
REDIS_URL=redis://your-redis-host:6379/0

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# xAI API Key
XAI_API_KEY=your_xai_api_key_here

# WhatsApp Microservice Configuration
WHATSAPP_API_URL=https://plubot-whatsapp.fly.dev
WHATSAPP_API_KEY=your_whatsapp_api_key_here

# Backend URL
BACKEND_URL=https://plubot-backend.onrender.com

# Email Configuration
OPINION_RECIPIENT_EMAIL=admin@plubot.com

# Encryption
ENCRYPTION_KEY=your_production_encryption_key_here

# WhatsApp Business API (Official)
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token
WHATSAPP_REDIRECT_URI=https://plubot-backend.onrender.com/api/whatsapp-business/oauth/callback

# Twilio WhatsApp
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886
